packages:
  yum:
    elinks: []
    make: []
    python: []

container_commands:
  01_install_ez_setup:
    command: "wget https://bitbucket.org/pypa/setuptools/raw/bootstrap/ez_setup.py -O - | python"

  02_install_sphinx:
    command: "easy_install sphinx"

  03_install_sphinx_phpdomain:
    command: "easy_install sphinxcontrib-phpdomain"

  04_install_cilexer:
    command: "cd /var/www/html/xylophone_framework/user_guide_src/cilexer; python setup.py install"

  05_compile_user_guide:
    command: "cd /var/www/html/xylophone_framework/user_guide_src; make html"

  06_move_html:
    command: "mv /var/www/html/xylophone_framework/user_guide_src/bin/html /var/www/html/public"

  07_rename_html:
    command: "cd /var/www/html/public; mv html user_guide"

  08_restart_apache:
    command: "apachectl restart"